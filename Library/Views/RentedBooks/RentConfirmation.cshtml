@model Library.Models.Book

@{
    ViewBag.Title = "Rent a book";
}

<h1>Rent a book</h1>
<h4>Hey @User.Identity.Name are you sure, you want to rent:</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.BookId)

    <h4>
        <b>Title:</b> @Model.Title <br /><br />
        <b>To:</b> @DateTime.Now.AddDays(14)
        <hr />
        Remember!, after 14 days you will get 1$ penalty per second.
    </h4>
    <div class="form-group">
        <div class="col-md-offset-0 col-md-1">
            <input type="submit" value="Rent" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Books")

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
